{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "indent": [
      "error",
      2
    ],
    "max-len": "off",
    "no-extra-boolean-cast": "off",
    "semi": 2,
    "space-before-function-paren": [
      "error",
      "never"
    ]
  }
}
